<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/full_name"/>

        <EditText
            android:id="@+id/edit_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/edit_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/city"/>

        <EditText
            android:id="@+id/edit_description"
            android:hint="@string/why_should_you_be_given_volunteer_status"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:inputType="textMultiLine" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_has_vehicle"
            android:text="@string/i_have_a_vehicle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/when_you_can_help"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_availability_weekdays"
            android:text="@string/on_weekdays"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_availability_weekends"
            android:text="@string/on_weekends"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_you_can_help"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_help_shelter"
            android:text="@string/provide_shelter_for_animals"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_help_clinic_delivery"
            android:text="@string/deliver_animals_to_clinic"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_help_onsite_visit"
            android:text="@string/on_site_visit"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_help_medical_care"
            android:text="@string/medical_care"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_help_information"
            android:text="@string/provide_information"/>

        <EditText
            android:id="@+id/edit_telegram_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/telegram_username"/>

        <EditText
            android:id="@+id/edit_viber_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/viber_phone"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/edit_whatsapp_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/whatsapp_phone"
            android:inputType="phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos_videos"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/media_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/button_add_media"
            android:text="@string/add_photos_videos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/button_submit"
            android:text="@string/submit_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_view_requests"
            android:text="@string/view_all_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
